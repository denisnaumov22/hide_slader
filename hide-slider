(function(wnd, doc) {
    let slideshowEl,
        hookEcwidTimeout;
  
    // @see https://api-docs.ecwid.com/reference/ecwidonpageloadecwidonpageloaded
    function _toggleSlides(page) {
      if (!slideshowEl) {
        slideshowEl = doc.querySelector('.slider-wrapper > .slider');
      }
  
      if (slideshowEl) {
        const isStartPage = page.type === 'CATEGORY' && page.categoryId === 0;

        slideshowEl.classList[isStartPage ? 'remove' : 'add']('hidden');
      }
    }
  
    function _hookEcwid() {
      if (wnd.Ecwid) {
        wnd.Ecwid.OnPageLoad.add(_toggleSlides);
      } else {
        clearTimeout(hookEcwidTimeout);
        hookEcwidTimeout = setTimeout(_hookEcwid, 100);
      }
    }
  
    _toggleSlides();
    _hookEcwid();
})(window, document);
